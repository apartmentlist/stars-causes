<li class="star sheer round clearfix">
  <%= render :partial => 'shared/photo_pair',
             :locals => {:star => star, :size => :square} %>
  <div class="info">
    <div class="reason">
      <%= star.reason %>
    </div>
    <div class="time">
      <%= friendly_time(star.created_at) %>
    </div>
  </div>
  <%= render :partial => 'stars/second', :locals => {:star => star} %>
</li>
