<%- @hide_create_star = true %>
<div class="lone_message sheer round" %>
  Star light, star bright...
  <%- form_for @user_session do |f| -%>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <%= f.submit "Log in" %>
  <%- end -%>
</div>
